# Production Environment for Sports-Only Mode
# Generated: 2026-01-31

# ============================================================================
# DATABASE
# ============================================================================
DB_PASSWORD=sportsArb2026!SecureDB
DATABASE_URL=postgresql://sports_user:sportsArb2026!SecureDB@postgres:5432/data_module_sports

# ============================================================================
# SPORTS-ONLY MODE
# ============================================================================
SPORTS_ONLY_MODE=true
FOCUS_TOPICS=SPORTS
EXCLUDE_MVE_MARKETS=true

# ============================================================================
# KALSHI API CREDENTIALS
# ============================================================================
KALSHI_MODE=catalog
KALSHI_API_KEY_ID=377f9729-07e8-4885-9947-50948d9213d3
KALSHI_PRIVATE_KEY_PATH=/secrets/kalshi-private-key.pem

# ============================================================================
# QUOTES CONFIGURATION (High-frequency for live odds)
# ============================================================================
QUOTES_MODE=watchlist
QUOTES_INTERVAL_SECONDS=15
QUOTES_WATCHLIST_LIMIT=1000

# ============================================================================
# ELIGIBILITY FILTERS
# ============================================================================
ELIGIBILITY_LOOKBACK_HOURS_SPORTS=336
ELIGIBILITY_GRACE_MINUTES=15

# ============================================================================
# OPERATIONS
# ============================================================================
OPS_INTERVAL_MINUTES=5
OPS_AUTO_CONFIRM=true
OPS_AUTO_REJECT=true

# ============================================================================
# WEB UI
# ============================================================================
REVIEW_SERVER_PORT=3000
REVIEW_SERVER_HOST=0.0.0.0

# ============================================================================
# MONITORING
# ============================================================================
ENABLE_LIVE_EVENTS_MONITOR=true
LIVE_EVENT_THRESHOLD_MINUTES=30

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE=/app/logs/worker.log

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
KALSHI_DB_BATCH=1000
KALSHI_QUOTE_BATCH=200
KALSHI_STUCK_THRESHOLD_MIN=5
KALSHI_MAX_FAILURES_IN_ROW=3

# ============================================================================
# SPORT COVERAGE (100% of all sports)
# ============================================================================
ENABLE_ESPORTS=true
ENABLE_SOCCER=true
ENABLE_US_SPORTS=true
ENABLE_INDIVIDUAL_SPORTS=true
ENABLE_COMBAT_SPORTS=true

# Auto-confirm settings
AUTO_CONFIRM_MONEYLINE=true
AUTO_CONFIRM_SPREAD=false
AUTO_CONFIRM_TOTAL=false
